<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VocabMaster</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VocabMaster.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VocabMaster</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    @{
                        var userName = Context.Session.GetString("Name");
                    }
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <div class="d-flex ms-auto align-items-center">
                            <span class="me-3 fw-bold text-primary">@userName</span>
                            <a class="btn btn-primary" asp-controller="Account" asp-action="Logout">Đăng xuất</a>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex ms-auto">
                            <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Đăng ký</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="flex-shrink-0 p-3 bg-light" style="width: 220px; min-height: 80vh;">
            <h5 class="mb-4">Demo</h5>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Demo 1</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">Demo 2</a>
                </li>
            </ul>
        </nav>
        <!-- Main content -->
        <div class="flex-grow-1">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - VocabMaster
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
