@{
    ViewData["Title"] = "VocabMaster";
}
<!-- Thêm link Bootstrap Icons vào _Layout.cshtml nếu chưa có -->
<div class="home-container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0" style="max-width: 800px; width: 100%; background: rgba(255, 255, 255, 0.95);">
        <div class="card-body text-center p-5">
            <h1 class="display-4 mb-4 text-primary fw-bold">
                <i class="bi bi-book-half me-2"></i>
                VocabMaster
            </h1>
            <p class="lead mb-5">
                Trang web giúp bạn học từ vựng tiếng Anh mỗi ngày<br>
                <span class="text-success fw-bold">Dễ dàng - Hiệu quả - Miễn phí</span>
            </p>

            <!-- Tính năng nổi bật -->
            <div class="row mb-5">
                <div class="col-md-4">
                    <div class="feature-card p-3">
                        <i class="bi bi-lightning-charge text-warning fs-1"></i>
                        <h5 class="mt-3">Học nhanh</h5>
                        <p class="text-muted">Từ vựng mới mỗi ngày</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-3">
                        <i class="bi bi-graph-up text-success fs-1"></i>
                        <h5 class="mt-3">Theo dõi tiến độ</h5>
                        <p class="text-muted">Xem sự tiến bộ của bạn</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-3">
                        <i class="bi bi-trophy text-primary fs-1"></i>
                        <h5 class="mt-3">Thành tích</h5>
                        <p class="text-muted">Nhận huy hiệu khi học tập</p>
                    </div>
                </div>
            </div>

            <a href="@Url.Action("Index", "WordGenerator")" 
               class="btn btn-primary btn-lg px-5 py-3 start-button">
                <i class="bi bi-play-circle me-2"></i>
                Bắt đầu học từ mới
            </a>
        </div>
    </div>
</div>

<style>
    .home-container {
        background: linear-gradient(135deg, #6B73FF 0%, #000DFF 100%);
        margin: -1rem;  /* Bù lại padding của container */
        padding: 1rem;
    }

    .feature-card {
        transition: all 0.3s ease;
        border-radius: 10px;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.1);
    }

    .start-button {
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .start-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }
</style>
