@{
    ViewData["Title"] = "VocabMaster";
}

<div class="home-container d-flex justify-content-center align-items-center" style="min-height: 80vh; margin: -1rem; padding: 1rem;">
    <div class="card shadow-lg border-0" style="max-width: 900px; width: 100%; background: rgba(255, 255, 255, 0.95);">
        <div class="card-body text-center p-5">
            <div class="mb-4">
                <i class="bi bi-book-half text-primary display-1"></i>
            </div>
            <h1 class="display-4 mb-4 fw-bold">
                VocabMaster
            </h1>
            <p class="lead mb-5">
                Trang web giúp bạn học từ vựng tiếng Anh mỗi ngày<br>
                <span class="text-primary fw-bold">Dễ dàng - Hiệu quả - Miễn phí</span>
            </p>

            <!-- Tính năng nổi bật -->
            <div class="row mb-5">
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="feature-card p-4 h-100">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-lightning-charge fs-1" style="color: #FF9F1C;"></i>
                        </div>
                        <h5 class="fw-bold">Học nhanh</h5>
                        <p class="text-muted mb-0">Từ vựng mới mỗi ngày giúp bạn cải thiện vốn từ nhanh chóng</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="feature-card p-4 h-100">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-graph-up fs-1" style="color: #4CC9F0;"></i>
                        </div>
                        <h5 class="fw-bold">Theo dõi tiến độ</h5>
                        <p class="text-muted mb-0">Xem sự tiến bộ của bạn qua các biểu đồ trực quan</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-4 h-100">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-trophy fs-1" style="color: #4361EE;"></i>
                        </div>
                        <h5 class="fw-bold">Thành tích</h5>
                        <p class="text-muted mb-0">Nhận huy hiệu và phần thưởng khi hoàn thành mục tiêu học tập</p>
                    </div>
                </div>
            </div>

            <a href="@Url.Action("Index", "WordGenerator")" 
               class="btn btn-primary btn-lg px-5 py-3 rounded-pill">
                <i class="bi bi-play-circle me-2"></i>
                Bắt đầu học từ mới
            </a>
        </div>
    </div>
</div>
