@using VocabMaster.Core.Entities
@model List<LearnedVocabulary>
@{
    ViewData["Title"] = "Từ vựng đã học";
}

@section Styles {
    <link rel="stylesheet" href="~/css/learnedwords.css" />
}

<div class="container mt-4">
    <!-- Hiển thị thông báo từ TempData -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0">
                    <i class="bi bi-journal-check text-primary me-2"></i>
                    Từ vựng đã học
                </h1>
                <a href="@Url.Action("Index", "WordGenerator")" class="btn btn-outline-primary rounded-pill">
                    <i class="bi bi-shuffle me-1"></i>
                    Học từ mới
                </a>
            </div>
        </div>
    </div>

    <!-- Thống kê -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="stats-card text-center">
                <div class="stats-number">@Model.Count</div>
                <div class="stats-label">Tổng số từ đã học</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card text-center">
                <div class="stats-number">@(Model.Count > 0 ? Model.Max(w => w.DateLearned).ToString("dd/MM/yyyy") : "N/A")</div>
                <div class="stats-label">Ngày học gần nhất</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stats-card text-center">
                <div class="stats-number">@(DateTime.Now.Month)</div>
                <div class="stats-label">Tháng hiện tại</div>
            </div>
        </div>
    </div>

    <!-- Tìm kiếm -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="search-box">
                <div class="input-group">
                    <input type="text" id="searchInput" class="form-control search-input" 
                           placeholder="Tìm kiếm từ vựng..." aria-label="Tìm kiếm từ vựng">
                    <button class="btn btn-primary search-button" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bảng từ vựng đã học -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-body">
                    @if (Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover learned-words-table">
                                <thead>
                                    <tr>
                                        <th scope="col" width="5%">#</th>
                                        <th scope="col" width="30%">Từ vựng</th>
                                        <th scope="col" width="25%">Ngày học</th>
                                        <th scope="col" width="20%">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        var word = Model[i];
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td class="word-text">@word.Word</td>
                                            <td class="date-learned">@word.DateLearned.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <form method="post" asp-action="GetWordDefinition" class="d-inline">
                                                    <input type="hidden" name="word" value="@word.Word" />
                                                    <button type="submit" class="btn btn-lookup btn-action" title="Tra từ">
                                                        <i class="bi bi-search"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-action="RemoveLearnedWord" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="word" value="@word.Word" />
                                                    <button type="submit" class="btn btn-remove btn-action" title="Xóa khỏi danh sách">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="bi bi-journal-x"></i>
                            </div>
                            <h4>Chưa có từ vựng nào được đánh dấu là đã học</h4>
                            <p class="text-muted">Hãy sử dụng tính năng "Đánh dấu đã học" khi tra từ để thêm từ vào danh sách này</p>
                            <a href="@Url.Action("Index", "WordGenerator")" class="btn btn-primary rounded-pill mt-3">
                                <i class="bi bi-shuffle me-1"></i>
                                Học từ mới ngay
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tìm kiếm từ vựng
        document.getElementById('searchInput').addEventListener('keyup', function() {
            const searchText = this.value.toLowerCase();
            const rows = document.querySelectorAll('.learned-words-table tbody tr');
            
            rows.forEach(row => {
                const wordText = row.querySelector('.word-text').textContent.toLowerCase();
                if (wordText.includes(searchText)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
} 