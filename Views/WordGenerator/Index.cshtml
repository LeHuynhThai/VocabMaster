@using VocabMaster.Entities
@model List<LearnedVocabulary>
@{
    ViewData["Title"] = "Từ vựng ngẫu nhiên";
}

@section Styles {
    <link rel="stylesheet" href="~/css/wordgenerator.css" />
}

<div class="container mt-4">
    <!-- Hiển thị thông báo từ TempData -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Từ vựng ngẫu nhiên -->
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">
                        <i class="bi bi-book text-primary me-2"></i>
                        Từ vựng ngẫu nhiên
                    </h2>
                    
                    <div class="d-flex justify-content-center mb-4">
                        <!-- Nút sinh từ ngẫu nhiên -->
                        <form method="post" asp-action="GenerateWord" class="me-3">
                            <button type="submit" class="btn btn-primary rounded-pill">
                                <i class="bi bi-shuffle me-2"></i>Từ ngẫu nhiên
                            </button>
                        </form>
                        
                        <!-- Form tra cứu từ -->
                        <form method="post" asp-action="GetWordDefinition" class="d-flex">
                            <div class="input-group">
                                <input type="text" name="word" class="form-control rounded-start" 
                                       placeholder="Nhập từ cần tra" required />
                                <button type="submit" class="btn btn-success rounded-end">
                                    <i class="bi bi-search me-1"></i>Tra từ
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Hiển thị lỗi -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-warning mb-4">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <!-- Hiển thị từ vựng -->
                    @if (ViewBag.RandomWord != null)
                    {
                        var word = ViewBag.RandomWord as DictionaryResponse;
                        <div class="word-card mb-4">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="word-header">
                                        <h2 class="text-primary mb-0">@word.Word</h2>
                                        @if (!string.IsNullOrEmpty(word.Phonetic))
                                        {
                                            <span class="word-phonetic text-muted">/@word.Phonetic/</span>
                                        }
                                    </div>
                                    <form method="post" asp-action="MarkAsLearned">
                                        <input type="hidden" name="word" value="@word.Word" />
                                        <button type="submit" class="btn btn-outline-success">
                                            <i class="bi bi-check2-circle me-1"></i>Đánh dấu đã học
                                        </button>
                                    </form>
                                </div>

                                <!-- Audio phát âm -->
                                @if (word.Phonetics != null && word.Phonetics.Any(p => !string.IsNullOrEmpty(p.Audio)))
                                {
                                    <div class="mb-4">
                                        @foreach (var phonetic in word.Phonetics.Where(p => !string.IsNullOrEmpty(p.Audio)))
                                        {
                                            <div class="d-flex align-items-center mb-2">
                                                <audio controls class="me-2">
                                                    <source src="@phonetic.Audio" type="audio/mpeg">
                                                </audio>
                                                @if (!string.IsNullOrEmpty(phonetic.Text))
                                                {
                                                    <span class="word-phonetic">/@phonetic.Text/</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                }

                                <!-- Nghĩa của từ -->
                                @if (word.Meanings != null)
                                {
                                    foreach (var meaning in word.Meanings)
                                    {
                                        <div class="mb-4">
                                            <div class="part-of-speech mb-2">
                                                <i class="bi bi-bookmark me-1"></i>@meaning.PartOfSpeech
                                            </div>

                                            @foreach (var def in meaning.Definitions)
                                            {
                                                <div class="definition-card mb-3">
                                                    <p class="mb-2">@def.Text</p>

                                                    @if (!string.IsNullOrEmpty(def.Example))
                                                    {
                                                        <p class="example-text mb-2">
                                                            "@def.Example"
                                                        </p>
                                                    }

                                                    @if (def.Synonyms != null && def.Synonyms.Any())
                                                    {
                                                        <div class="mb-2">
                                                            <span class="fw-bold text-primary">Đồng nghĩa: </span>
                                                            @string.Join(", ", def.Synonyms)
                                                        </div>
                                                    }

                                                    @if (def.Antonyms != null && def.Antonyms.Any())
                                                    {
                                                        <div>
                                                            <span class="fw-bold text-danger">Trái nghĩa: </span>
                                                            @string.Join(", ", def.Antonyms)
                                                        </div>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/wordgenerator.js"></script>
}
