@model VocabMaster.Entities.User

@{
    ViewData["Title"] = "Đăng ký";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">@ViewData["Title"]</h2>

                <form asp-action="Register" method="post">
                    <div class="validation-summary-errors text-danger" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Tên đăng nhập</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                    </div>
                </form>

                <div class="mt-3 text-center">
                    <p>Đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 